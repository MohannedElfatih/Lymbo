<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.gailardia.lymbo.choices">


    <ImageView
        android:contentDescription="@string/driver_choice"
        android:foregroundGravity="center"
        android:layout_width="90dp"
        android:onClick="Dsignin"
        android:src="@drawable/car"
        android:visibility="visible"
        android:id="@+id/imageView9"
        android:layout_height="90dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="48dp"
        android:layout_marginTop="224dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView8"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:paddingTop="20dp" />

    <ImageView
        android:contentDescription="@string/rider_choice"
        android:onClick="openMap"
        android:src="@drawable/boy"
        android:visibility="visible"
        android:id="@+id/imageView8"
        android:foregroundGravity="center"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="224dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:text="@string/rider"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#87f1f1f1"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:id="@+id/Driver"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        android:gravity="center"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp" />

    <TextView
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:text="@string/driver"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#87f1f1f1"
        android:textSize="20sp"
        android:layout_width="90dp"
        android:id="@+id/textView6"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="48dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:contentDescription="@string/logo"
        android:id="@+id/imageView2"
        android:alpha="0"
        android:src="@drawable/logot2"
        android:visibility="visible"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
