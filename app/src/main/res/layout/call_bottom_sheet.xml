<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="#BDBDBD"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:background="#323232"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:text="Call"
                    android:layout_height="32dp"
                    android:id="@+id/callIcon"
                    android:background="@drawable/ripple_effect"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="normal|bold"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:textColor="#8BC34A"
                    android:layout_width="32dp"
                    android:src="@drawable/callcustomericon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/call"
                    android:layout_toEndOf="@+id/call"
                    android:layout_marginLeft="38dp"
                    android:layout_marginStart="38dp" />

                <TextView
                    android:text="Call Ahmed Ibrahim?"
                    android:id="@+id/call"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_width="185dp"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="false"
                    android:gravity="bottom"
                    android:layout_height="30dp" />

                <ImageButton
                    android:layout_height="32dp"
                    android:id="@+id/cancelRequestIcon"
                    android:gravity="center"
                    android:layout_width="32dp"
                    android:clickable="true"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/cancel"
                    android:background="@drawable/ripple_effect"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="32dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <TextView
                    android:text="Call"
                    android:layout_height="wrap_content"
                    android:id="@+id/callButton"
                    android:background="@drawable/ripple_effect"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="normal|bold"
                    android:textSize="10sp"
                    android:clickable="false"
                    android:textColor="#64DD17"
                    android:layout_width="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/cancelRequest"
                    android:layout_toStartOf="@+id/cancelRequest"
                    android:layout_marginRight="35dp"
                    android:layout_marginEnd="35dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="normal|bold"
                    android:textSize="10sp"
                    android:clickable="false"
                    android:id="@+id/cancelRequest"
                    android:text="Cancel Request"
                    android:gravity="center"
                    android:textColor="#DD2C00"
                    android:layout_width="70dp"
                    android:layout_marginEnd="13dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
