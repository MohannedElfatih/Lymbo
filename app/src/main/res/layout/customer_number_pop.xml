<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@null"
    android:id="@+id/edit">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="13dp"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:cardBackgroundColor="@null"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:alpha=".80"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/my_border"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:alpha="1">

            <TextView
                android:text="Enter your phone number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:gravity="center"
                android:textColor="#22313f"
                android:textSize="16sp" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_height="32dp">

                <ImageView
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone3"
                    android:id="@+id/editphone"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:paddingTop="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:background="@drawable/lymbo_edit_text_holo_dark"
                    android:id="@+id/customerPhoneNumber"
                    android:hint="Insert phone number"
                    android:layout_gravity="left"
                    android:gravity="bottom"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:layout_marginRight="20dp"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:elevation="0dp"
                    android:paddingBottom="2dp" />
            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <Button
                    android:id="@+id/customerNumberSubmit"
                    android:background="@drawable/notchecked"
                    android:textColor="#22313F"
                    android:textSize="16sp"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:foregroundGravity="center_horizontal|center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>