<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@null"
    android:id="@+id/edit">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="13dp"
        android:background="@null">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/my_border"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:text="Select the new type of vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:gravity="center"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/tuktuk1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="#EEEEEE"
                    android:nestedScrollingEnabled="false"
                    android:src="@drawable/tuktukchoice"
                    android:onClick="typechange" />

                <ImageButton
                    android:id="@+id/car1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#EEEEEE"
                    android:nestedScrollingEnabled="false"
                    android:onClick="typechange"
                    android:src="@drawable/carchoice" />

                <ImageButton
                    android:id="@+id/amjad1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#EEEEEE"
                    android:onClick="typechange"
                    android:src="@drawable/amjadchoice" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:weightSum="2">

                <ImageView
                    android:layout_height="50dp"
                    android:src="@drawable/phone3"
                    android:id="@+id/editphone"
                    android:paddingTop="5dp"
                    android:visibility="visible"
                    android:layout_width="30dp" />

                <EditText
                    android:layout_width="188dp"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:background="@drawable/lymbo_edit_text_holo_dark"
                    android:ems="10"
                    android:id="@+id/newphone"
                    android:paddingTop="20dp"
                    android:hint="Edit phone number"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1.21" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:paddingTop="4dp"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/editsubmit"
                        android:background="@drawable/checked"
                        android:textColor="#22313F"
                        android:textSize="16sp"
                        android:layout_weight="0"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:foregroundGravity="center_horizontal|center"
                        android:layout_marginStart="50dp"
                        android:layout_width="59dp"
                        android:layout_height="59dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <Button
                        android:id="@+id/closeedit"
                        android:background="@drawable/unchecked"
                        android:layout_marginEnd="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_width="59dp"
                        android:layout_height="59dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>