<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="32dp"
    android:paddingTop="32dp"
    android:orientation="vertical"
    android:background="#30000000">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:background="#30000000">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Choose the type of vehicle you want   :"

            android:textColor="#d7d7d7"
            android:textSize="18sp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2"
            android:fontFamily="@string/abc_action_bar_home_description"
            android:background="#30000000"
            android:textStyle="italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:background="#30000000">

        <ImageButton
            android:id="@+id/tuktuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="#30000000"
            android:src="@drawable/tuktuk"
            android:nestedScrollingEnabled="false"
            android:onClick="type" />

        <ImageButton
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="#30000000"
            android:src="@drawable/choicecar"
            android:onClick="type"
            android:nestedScrollingEnabled="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amjad"
            android:layout_weight="1"
            android:src="@drawable/amjad"
            android:onClick="type"
            android:background="#30000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Estimated time for arrival : "
            android:id="@+id/textView"
            android:textSize="18sp"
            android:paddingTop="20dp"
            android:textColor="#FFFFFF"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Price : "
            android:id="@+id/priceID"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:textStyle="italic"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal" >

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="20dp"
            android:background="#33ffffff"
            android:textColor="#ffffff"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="20dp"
            android:background="#33ffffff"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

</LinearLayout>
