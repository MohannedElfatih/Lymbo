<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gailardia.lymbo.MainActivity"
    android:background="@drawable/bg5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:id="@+id/scndSignup"
        android:visibility="invisible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle type"
                    android:id="@+id/textView5"
                    android:textAlignment="center"
                    android:textColor="#d7d7d7"
                    android:textSize="22dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tuktuk"
                    android:src="@drawable/tuktuk"
                    android:background="@null"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="type" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/car"
                    android:src="@drawable/choicecar"
                    android:background="@null"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="type" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/amjad"
                    android:src="@drawable/amjad"
                    android:background="@null"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="type" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raksha"
                    android:id="@+id/tuktuk2"
                    android:textSize="23dp"
                    android:textColor="#d7d7d7"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.38"
                    android:paddingLeft="0dp"
                    android:textAlignment="center"
                    android:onClick="type" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="car"
                    android:id="@+id/car2"
                    android:textSize="23dp"
                    android:textColor="#d7d7d7"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.94"
                    android:textAlignment="center"
                    android:onClick="type" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amjad"
                    android:id="@+id/amjad2"
                    android:textSize="23dp"
                    android:textColor="#d7d7d7"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.60"
                    android:textAlignment="center"
                    android:onClick="type" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="205dp"
            android:layout_weight=".75002" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_marginTop="40dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/selected"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/raksha" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp" >

                <Button
                    android:layout_width="189dp"
                    android:layout_height="fill_parent"
                    android:text="Upload your car photo"
                    android:id="@+id/picked"
                    android:background="#80ffffff"
                    android:textColor="#ffffff"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight=".2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Next"
                android:id="@+id/textView11"
                android:textSize="23sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:textAlignment="viewEnd"
                android:layout_gravity="center_vertical"
                android:onClick="finishsignup"
                android:nestedScrollingEnabled="true"
                android:layout_weight="0.08" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton6"
                android:src="@drawable/next"
                android:background="@null"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight=".07"
                android:onClick="finishsignup" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg5"
        android:id="@+id/firstSignup"
        android:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#00ffffff"
            android:layout_marginTop="0dp"
            android:layout_weight="0">

            <ImageView
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView8"
                android:src="@drawable/logot2"
                android:baselineAlignBottom="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Driver SignUp"
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:src="@drawable/avatar3"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/name"
                android:hint="Username"
                android:background="#80ffffff"
                android:paddingStart="80dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingEnd="80dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/imageView3"
                android:src="@drawable/locked3"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password1"
                android:hint="Password"
                android:background="#80ffffff"
                android:paddingStart="80dp"
                android:paddingEnd="80dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password2"
                android:hint="Confirm Password"
                android:background="#80ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="64.7dp"
                android:paddingStart="50dp"
                android:paddingEnd="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/imageView11"
                android:src="@drawable/phone"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phone"
                android:hint="Phone number"
                android:background="#80ffffff"
                android:paddingStart="70dp"
                android:paddingEnd="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Next"
                android:id="@+id/textView4"
                android:textSize="23sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:textAlignment="viewEnd"
                android:layout_gravity="center_vertical"
                android:onClick="Scndsignup"
                android:nestedScrollingEnabled="true"
                android:layout_weight="0.08" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton"
                android:src="@drawable/next"
                android:background="@null"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight=".07"
                android:onClick="Scndsignup" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
