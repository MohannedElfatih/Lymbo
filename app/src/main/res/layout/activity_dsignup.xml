<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gailardia.lymbo.MainActivity"
    android:background="@drawable/bg5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scndSignup"
        android:background="@drawable/bg5"
        android:visibility="gone"
        android:alpha="0"
        >
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Choose your vehicle type"
                android:textAlignment="center"
                android:textColor="#d7d7d7"
                android:textSize="22sp"
                android:layout_above="@+id/linearLayout"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/tuktuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:onClick="type"
                    android:src="@drawable/tuktuk" />

                <ImageButton
                    android:id="@+id/car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:onClick="type"
                    android:src="@drawable/choicecar" />

                <ImageButton
                    android:id="@+id/amjad"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:onClick="type"
                    android:src="@drawable/amjad" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tuktuk2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.38"
                    android:onClick="type"
                    android:paddingLeft="0dp"
                    android:text="Raksha"
                    android:textAlignment="center"
                    android:textColor="#d7d7d7"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/car2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.94"
                    android:onClick="type"
                    android:text="car"
                    android:textAlignment="center"
                    android:textColor="#d7d7d7"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/amjad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.60"
                    android:onClick="type"
                    android:text="Amjad"
                    android:textAlignment="center"
                    android:textColor="#d7d7d7"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@id/selected"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/raksha"
            android:visibility="invisible"
            app:civ_border="false"
            app:civ_shadow="true"
            app:civ_shadow_color="#424242"
            app:civ_shadow_radius="10"
            android:alpha="0" />

        <ImageView
            android:id="@+id/imageButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="finishsignup"
            android:src="@drawable/next"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="29dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/selected"
            android:layout_above="@id/imageButton11"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout2"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:gravity="center_vertical|left"
                android:hint="Phone number"
                android:inputType="phone"
                android:paddingEnd="3dp"
                android:paddingStart="6dp"
                android:paddingTop="5dp"
                android:textColor="#fdfdfd"
                android:textColorHint="#9ff1f1f1" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg5"
        android:id="@+id/firstSignup"
        android:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#00ffffff"
            android:layout_marginTop="0dp"
            android:layout_weight="0">

            <ImageView
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView8"
                android:src="@drawable/logot2"
                android:baselineAlignBottom="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/imageView2"
                android:src="@drawable/avatar3"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="text"
                android:id="@+id/name"
                android:hint="Username"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:paddingStart="6dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingEnd="3dp"
                android:gravity="center_vertical|left"
                android:textColorHint="#9ff1f1f1"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="#fdfdfd"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/imageView3"
                android:src="@drawable/locked3"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="textPassword"
                android:id="@+id/password1"
                android:hint="Password"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:paddingStart="6dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingEnd="3dp"
                android:gravity="center_vertical|left"
                android:textColorHint="#9ff1f1f1"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="#fdfdfd"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="textPassword"
                android:id="@+id/password2"
                android:hint="Confirm Password"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:paddingStart="6dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingEnd="3dp"
                android:gravity="center_vertical|left"
                android:textColorHint="#9ff1f1f1"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="#fdfdfd"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="15dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:weightSum="1"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.2"
                android:id="@+id/imageView111"
                android:src="@drawable/phone"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:id="@+id/firstName"
                android:hint="First Name"
                android:layout_weight="0.4"
                android:paddingStart="6dp"
                android:paddingLeft="0dp"
                android:paddingEnd="3dp"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:gravity="center_vertical|left"
                android:textColorHint="#9ff1f1f1"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="#fdfdfd"
                android:layout_marginRight="20dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:id="@+id/lastName"
                android:hint="Last Name"
                android:layout_weight="0.4"
                android:paddingStart="6dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingEnd="3dp"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:gravity="center_vertical|left"
                android:textColorHint="#9ff1f1f1"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="#fdfdfd"
                android:layout_marginRight="15dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1">

            <ImageButton
            android:background="@null"
            android:id="@+id/imageButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="Scndsignup"
            android:src="@drawable/next"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:layout_gravity="bottom"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="29dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
