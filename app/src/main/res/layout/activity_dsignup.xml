<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    tools:context="com.gailardia.lymbo.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@drawable/bg5"
        android:id="@+id/scndSignup"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:layout_marginTop="170dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout2"
                android:layout_alignRight="@+id/linearLayout2"
                android:layout_marginBottom="15dp"
                android:fontFamily="@string/abc_action_bar_home_description"
                android:text="Choose your vehicle type"
                android:textAlignment="center"
                android:textColor="#d7d7d7"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/tuktuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:onClick="type"
                    android:src="@drawable/tuktuk" />

                <ImageButton
                    android:id="@+id/car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/car"
                    android:onClick="type"
                    android:src="@drawable/choicecar" />

                <ImageButton
                    android:id="@+id/amjad"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:onClick="type"
                    android:src="@drawable/amjad" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tuktuk2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.38"
                    android:onClick="type"
                    android:paddingLeft="0dp"
                    android:text="Raksha"
                    android:textAlignment="center"
                    android:textColor="#d7d7d7"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/car2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.94"
                    android:onClick="type"
                    android:text="car"
                    android:textAlignment="center"
                    android:textColor="#d7d7d7"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/amjad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.60"
                    android:onClick="type"
                    android:text="Amjad"
                    android:textAlignment="center"
                    android:textColor="#d7d7d7"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:layout_marginTop="70dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:elegantTextHeight="false"
                android:gravity="bottom"
                android:hint="Phone number"
                android:inputType="phone"
                android:paddingEnd="3dp"
                android:paddingStart="6dp"
                android:paddingTop="5dp"
                android:textColor="#fdfdfd"
                android:textColorHint="#9ff1f1f1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="1"
            android:onClick="finishsignup">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp"
                android:adjustViewBounds="false"
                android:background="@null"
                android:baselineAlignBottom="false"
                android:onClick="Scndsignup"
                android:src="@drawable/next"
                android:layout_weight=".05" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstSignup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg5"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <ImageView
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAlignBottom="false"
                android:src="@drawable/logot2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/avatar3" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="15dp"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:gravity="bottom"
                android:hint="Username"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:paddingEnd="3dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="6dp"
                android:paddingTop="5dp"
                android:textColor="#fdfdfd"
                android:textColorHint="#9ff1f1f1"
                android:layout_weight="1"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/locked3" />

            <EditText
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="15dp"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:gravity="bottom"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingEnd="3dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="6dp"
                android:paddingTop="5dp"
                android:textColor="#fdfdfd"
                android:textColorHint="#9ff1f1f1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:gravity="bottom"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingEnd="3dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="6dp"
                android:paddingTop="5dp"
                android:textColor="#fdfdfd"
                android:textColorHint="#9ff1f1f1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:paddingLeft="3dp"
                android:src="@drawable/names" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="7dp"
                android:layout_weight="0.4"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:gravity="bottom"
                android:hint="First Name"
                android:paddingBottom="10dp"
                android:paddingEnd="3dp"
                android:paddingLeft="0dp"
                android:paddingStart="6dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="#fdfdfd"
                android:textColorHint="#9ff1f1f1" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="0.4"
                android:background="@drawable/lymbo_edit_text_holo_dark"
                android:gravity="bottom"
                android:hint="Last Name"
                android:paddingBottom="10dp"
                android:paddingEnd="3dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="6dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="#fdfdfd"
                android:textColorHint="#9ff1f1f1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
                android:adjustViewBounds="false"
                android:background="@null"
                android:baselineAlignBottom="false"
                android:onClick="Scndsignup"
                android:src="@drawable/next"
                android:layout_weight=".05" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
